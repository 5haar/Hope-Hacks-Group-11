<section class="home_container">
    <section class="main_container">
        <section class="text_container">
            <h1 class="title">Learn Near You!</h1>
            <br>
            <small class="description">Use the buttons below to search for educational resources located nearby.</small>
        </section>
        <section class="map_section">
            <section class="buttons">
                    <a href="/tutoring near me"><button class="location_link">Tutoring</button></a>
                    <a href="/educational organizations near me"><button class="location_link">Organizations</button></a>
                    <a href="/museums near me"><button class="location_link">Museums</button></a>
                    <a href="/libraries near me"><button class="location_link">Libraries</button></a>
                    <a href="/institutions near me"><button class="location_link">Institutions</button></a>
                    <a href="/reset"><button class="location_link_reset">Reset</button></a>
            </section>
            <iframe class="locationmap" style="border:0" loading="lazy" allowfullscreen src="<%= dynamicsrc %>"></iframe>   
        </section>
    </section>
</section>